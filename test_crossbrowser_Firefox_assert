from selenium import webdriver

from selenium.webdriver.common.by import By
import pytest

@pytest.fixture()
def firefox():
    #initialize a chrome driver
    driver = webdriver.Firefox()
    driver.maximize_window()
    yield driver
    #driver.quit()

def test_asserttitle(firefox):
    firefox.get("https://www.linkedin.com/home")
    firefox.implicitly_wait(10)
    title = firefox.title
    assert title == "LinkedIn: Log In or Sign Up"
