from selenium import webdriver

from selenium.webdriver.common.by import By
import pytest

@pytest.fixture()
def firefox():
    #initialize a chrome driver
    driver = webdriver.Firefox()
    driver.maximize_window()
    yield driver
    #driver.quit()

def test_CheckAddButtonStatus(firefox):
    firefox.get("https://practicetestautomation.com/practice-test-login/")

    link_element = firefox.find_element(by=By.XPATH, value="//*[@id='menu-item-20']/a")
    link_element.click()

    link_element2 = firefox.find_element(by=By.XPATH, value="//*[@id='loop-container']/div/article/div[2]/div[2]/div[1]/p/a")
    link_element2.click()

    #Checking button status
    Add = firefox.find_element(by=By.ID, value="add_btn")
    print('Add is enabled:')
    print(Add.is_enabled())
    print('Add is displayed:')
    print(Add.is_displayed())
